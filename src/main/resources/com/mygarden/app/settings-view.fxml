<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="335.0" spacing="200.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mygarden.app.controllers.SettingsController">

   <StackPane prefHeight="150.0" prefWidth="200.0">
      <children>
         <!-- Added fx:id so controller can change this per-language -->
         <ImageView fx:id="backgroundImageView" fitHeight="600.0" fitWidth="335.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../images/MainPage.jpg" />
            </image>
         </ImageView>
         <VBox alignment="TOP_CENTER" StackPane.alignment="TOP_CENTER">
            <children>
               <HBox alignment="CENTER" prefHeight="73.0" prefWidth="335.0" spacing="50.0" />

               <StackPane prefHeight="150.0" prefWidth="200.0">
                  <children>
                     <ImageView fitHeight="506.0" fitWidth="335.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../../../images/Challenge.png" />
                        </image>
                     </ImageView>

                     <VBox alignment="TOP_CENTER" prefHeight="378.0" prefWidth="335.0">
                        <children>
                           <Label text="%settings.title">
                              <font>
                                 <Font name="System Bold" size="25.0" />
                              </font>
                              <VBox.margin>
                                 <Insets top="21.0" />
                              </VBox.margin>
                           </Label>
                           <ComboBox fx:id="languageSelector" prefHeight="36.0" prefWidth="54.0" style="-fx-background-color: transparent;">
                              <VBox.margin>
                                 <Insets top="30.0" />
                              </VBox.margin>
                              <cursor>
                                 <Cursor fx:constant="HAND" />
                              </cursor>
                           </ComboBox>

                           <HBox alignment="CENTER" prefHeight="135.0" prefWidth="335.0" spacing="10.0">
                              <children>
                                 <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="110.0" text="%settings.musicVolume" textAlignment="CENTER" wrapText="true">
                                    <font>
                                       <Font name="System Bold" size="13.0" />
                                    </font>
                                 </Label>
                                 <Slider fx:id="volumeSlider" max="100" min="0" prefWidth="120.0">
                                    <cursor>
                                       <Cursor fx:constant="HAND" />
                                    </cursor></Slider>
                                 <Label fx:id="volumeLabel" text="50%">
                                    <font>
                                       <Font name="System Bold" size="13.0" />
                                    </font>
                                 </Label>
                              </children>
                              <padding>
                                 <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                              </padding>
                           </HBox>

                           <HBox alignment="CENTER" prefHeight="135.0" prefWidth="335.0" spacing="10.0">
                              <padding>
                                 <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                              </padding>
                              <children>
                                 <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="50.0" prefWidth="110.0" text="%settings.sfxVolume" textAlignment="CENTER" wrapText="true">
                                    <font>
                                       <Font name="System Bold" size="13.0" />
                                    </font>
                                 </Label>
                                 <Slider fx:id="sfxVolumeSlider" max="100" min="0" prefWidth="120.0">
                                    <cursor>
                                       <Cursor fx:constant="HAND" />
                                    </cursor></Slider>
                                 <Label fx:id="sfxVolumeLabel" text="50%">
                                    <font>
                                       <Font name="System Bold" size="13.0" />
                                    </font>
                                 </Label>
                              </children>
                           </HBox>
                           <HBox alignment="TOP_CENTER" prefHeight="25.0" prefWidth="335.0">
                              <children>
                                 <Button fx:id="deleteDataButton" mnemonicParsing="false" onAction="#resetApplication" style="-fx-background-color: red; -fx-border-color: darkred; -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-width: 3;" text="%settings.deleteAllData" textFill="WHITE">
                                    <HBox.margin>
                                       <Insets top="4.0" />
                                    </HBox.margin>
                                    <font>
                                       <Font name="System Bold" size="17.0" />
                                    </font>
                                    <cursor>
                                       <Cursor fx:constant="HAND" />
                                    </cursor></Button>
                              </children>
                           </HBox>

                        </children>
                     </VBox>
                  </children>
               </StackPane>

               <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onGoToMainPage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: transparent;">
                  <graphic>
                     <ImageView fitHeight="60.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../../../images/back_arrow.png" />
                        </image>
                        <cursor>
                           <Cursor fx:constant="HAND" />
                        </cursor>
                     </ImageView>
                  </graphic>
               </Button>

            </children>
         </VBox>
      </children>
   </StackPane>
</VBox>
