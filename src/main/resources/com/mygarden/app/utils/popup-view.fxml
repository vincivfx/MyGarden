<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #b1ccbb; -fx-border-color: #a0ac97; -fx-border-width: 3;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mygarden.app.controllers.utils.PopUpController">
   <children>
      <Label fx:id="label" alignment="CENTER" text="%popup.message" textAlignment="CENTER" wrapText="true">
         <VBox.margin>
            <Insets top="2.0" />
         </VBox.margin>
      </Label>
      <Button mnemonicParsing="false" onAction="#closeWindow" style="-fx-background-color: #59a834; -fx-border-color: #3b8133; -fx-border-width: 3; -fx-border-radius: 10; -fx-background-radius: 10;" text="%popup.ok" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
         <VBox.margin>
            <Insets top="8.0" />
         </VBox.margin>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</VBox>
