<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="335.0" style="-fx-font-family: 'Segoe UI';" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mygarden.app.controllers.GardenController">

        <center>
                <AnchorPane fx:id="canvas" onMouseDragged="#onPanDrag" onMousePressed="#onPanStart" prefHeight="540.0" prefWidth="335.0" style="-fx-background-image: url('/images/bg_grass.png'); -fx-background-size: cover; -fx-background-radius: 12; -fx-border-color: rgba(0,0,0,0.15); -fx-border-radius: 12;" BorderPane.alignment="CENTER">
                        <children>
                                <Group fx:id="isoLayer" />
                                <Label fx:id="plantedCounterLabel" layoutX="14.0" layoutY="14.0" prefHeight="26.0" prefWidth="97.0" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #333; -fx-background-color: rgba(255,255,255,0.6); -fx-padding: 4 8 4 8; -fx-background-radius: 6;" text="Planted:" textAlignment="CENTER" />
            <Label fx:id="plantedCounterLabelNum" layoutX="111.0" layoutY="14.0" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #333; -fx-background-color: rgba(255,255,255,0.6); -fx-padding: 4 8 4 8; -fx-background-radius: 6;" text="0" />
                        </children>
                        <padding>
                                <Insets bottom="12" left="12" right="12" top="12" />
                        </padding>
                </AnchorPane>
        </center>

        <bottom>
                <!-- Inventory panel - collapsed by default (maxHeight=0 and not managed) -->
                <AnchorPane fx:id="inventoryPane" maxHeight="0.0" prefHeight="150.0" style="-fx-background-color: A77B3A; -fx-border-color: A77B3A; -fx-padding: 8;" BorderPane.alignment="CENTER">
                        <children>
                                <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: EAD8AF;" vbarPolicy="NEVER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                        <content>
                                                <GridPane fx:id="inventoryGrid" alignment="TOP_CENTER" hgap="8" style="-fx-background-color: EAD8AF;" vgap="8">
                                                        <padding>
                                                                <Insets bottom="8" left="8" right="8" top="8" />
                                                        </padding>
                                                </GridPane>
                                        </content>
                                </ScrollPane>
                        </children>
                </AnchorPane>
        </bottom>
   <top>
      <VBox prefHeight="50.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <AnchorPane prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: EAD8AF;">
               <children>
                  <Button fx:id="shopButton" alignment="CENTER" contentDisplay="CENTER" layoutX="72.0" layoutY="11.0" mnemonicParsing="false" onAction="#onGoToShop" prefHeight="50.0" prefWidth="59.0" style="-fx-background-color: transparent;">
                     <font>
                        <Font size="2.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <graphic>
                        <ImageView fitHeight="60.0" fitWidth="44.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../images/shopIcon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="mainPageButton" alignment="CENTER" contentDisplay="CENTER" layoutX="8.0" layoutY="11.0" mnemonicParsing="false" onAction="#onGoToMainPage" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: transparent;">
                     <font>
                        <Font size="2.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <graphic>
                        <ImageView fitHeight="28.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../images/back_arrow.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="inventoryButton" alignment="CENTER" contentDisplay="CENTER" layoutX="151.0" layoutY="11.0" mnemonicParsing="false" onAction="#onToggleInventory" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: transparent;">
                     <font>
                        <Font size="2.0" />
                     </font>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <graphic>
                        <ImageView fitHeight="42.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../../images/inventoryIcon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </AnchorPane>
         </children>
      </VBox>
   </top>
</BorderPane>
