<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="335.0" style="-fx-font-family: 'Segoe UI';" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mygarden.app.controllers.GardenController">

        <top>
                <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10 12 8 12; -fx-background-color: rgba(255,255,255,0.6); -fx-border-color: #cfcfcf; -fx-border-width: 0 0 1 0;">
                        <children>
                                <Button onAction="#onGoToMainPage" style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 6 10; -fx-border-width: 3; -fx-border-radius: 8;" text="Main Page">
               <font>
                  <Font size="13.0" />
               </font></Button>
                                <Button onAction="#onGoToShop" style="-fx-background-color: #388e3c; -fx-text-fill: white; -fx-background-radius: 8; -fx-padding: 6 10; -fx-border-width: 3; -fx-border-radius: 8;" text="Shop">
               <font>
                  <Font size="13.0" />
               </font></Button>
                                <Button fx:id="inventoryButton" onAction="#onToggleInventory" style="-fx-background-color: #e0e0e0; -fx-text-fill: #333; -fx-background-radius: 8; -fx-padding: 6 10; -fx-border-width: 3; -fx-border-radius: 8;" text="Inventory">
               <font>
                  <Font size="13.0" />
               </font></Button>
                        </children>
                </HBox>
        </top>

        <center>
                <AnchorPane fx:id="canvas" onMouseDragged="#onPanDrag" onMousePressed="#onPanStart" prefHeight="540.0" prefWidth="335.0" style="-fx-background-image: url('/images/bg_grass.png'); -fx-background-size: cover; -fx-background-radius: 12; -fx-border-color: rgba(0,0,0,0.15); -fx-border-radius: 12;" BorderPane.alignment="CENTER">
                        <children>
                                <Group fx:id="isoLayer" />
                        </children>
                        <padding>
                                <Insets bottom="12" left="12" right="12" top="12" />
                        </padding>
                </AnchorPane>
        </center>

        <bottom>
                <!-- Inventory panel - collapsed by default (maxHeight=0 and not managed) -->
                <AnchorPane fx:id="inventoryPane" maxHeight="0.0" prefHeight="150.0" style="-fx-background-color: rgba(255,255,255,0.9); -fx-border-color: rgba(0,0,0,0.08); -fx-padding: 8;" BorderPane.alignment="CENTER">
                        <children>
                                <ScrollPane fitToHeight="true" fitToWidth="true" vbarPolicy="NEVER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                        <content>
                                                <GridPane fx:id="inventoryGrid" alignment="TOP_CENTER" hgap="8" vgap="8">
                                                        <padding>
                                                                <Insets bottom="8" left="8" right="8" top="8" />
                                                        </padding>
                                                </GridPane>
                                        </content>
                                </ScrollPane>
                        </children>
                </AnchorPane>
        </bottom>
</BorderPane>
