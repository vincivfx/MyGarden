<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.Label ?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mygarden.app.controllers.GardenController"
            prefWidth="383.0" prefHeight="433.0">

   <children>

      <!-- Buttons MainPage and Shop, just for testing we can take out if needed  -->
      <Button layoutX="14.0" layoutY="14.0"
              mnemonicParsing="false"
              text="Main Page"
              onAction="#onGoToMainPage"/>

      <Button layoutX="170.0" layoutY="14.0"
              mnemonicParsing="false"
              text="Shop"
              onAction="#onGoToShop"/>

      <!-- If we add an inventory latter -->
      <Button layoutX="303.0" layoutY="14.0"
              mnemonicParsing="false"
              text="Inventory"/>

                <!-- Garden grid -->
                <GridPane fx:id="gardenGrid" layoutX="30.0" layoutY="60.0" hgap="5.0" vgap="5.0" gridLinesVisible="true">
                        <!-- 5 columns & 4 rows -->
                        <columnConstraints>
                                <ColumnConstraints percentWidth="20" />
                                <ColumnConstraints percentWidth="20" />
                                <ColumnConstraints percentWidth="20" />
                                <ColumnConstraints percentWidth="20" />
                                <ColumnConstraints percentWidth="20" />
                        </columnConstraints>
                        <rowConstraints>
                                <RowConstraints percentHeight="25" />
                                <RowConstraints percentHeight="25" />
                                <RowConstraints percentHeight="25" />
                                <RowConstraints percentHeight="25" />
                        </rowConstraints>
                        <!-- Placeholder rectangles for drag-and-drop -->
                        <children>
                                <!-- 20 cells -->
                                <Label GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="0" GridPane.columnIndex="2" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="0" GridPane.columnIndex="3" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="0" GridPane.columnIndex="4" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="1" GridPane.columnIndex="2" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="1" GridPane.columnIndex="3" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="1" GridPane.columnIndex="4" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="2" GridPane.columnIndex="2" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="2" GridPane.columnIndex="3" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="2" GridPane.columnIndex="4" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="3" GridPane.columnIndex="1" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="3" GridPane.columnIndex="2" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="3" GridPane.columnIndex="3" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                                <Label GridPane.rowIndex="3" GridPane.columnIndex="4" style="-fx-border-color: gray; -fx-min-width: 50; -fx-min-height: 50;" />
                        </children>
                </GridPane>
        </children>
</AnchorPane>
